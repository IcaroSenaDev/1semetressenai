programa
{
	//Elabore um algoritmo que leia um valor e diga se ele é par ou impar (se (x % 2 == 0)

	funcao inicio()
	{
		inteiro num
		
		escreva("Olá usuário \n Digite um número \n")
		leia(num)

		se(num%2==0){
			escreva("O número ",num," é PAR")
				}senao{
					escreva("O número ",num," é IMPAR")
				}
	}
}
